<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tanks"
    android:versionCode="1"
    android:versionName="1.0"
    android:largeHeap="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android ">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22"/>

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.tanks.activities_menu.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tanks.game_engine.Game"
            android:label="@string/title_activity_game">
        </activity>
        <activity
            android:name="com.example.tanks.bluetooth.Blutacz_main"
            android:label="@string/title_activity_blutaczmenu">
        </activity>

        <activity
            android:name="com.example.tanks.game_engine_multiplayer.Game_multiplayer"
            android:label="@string/title_activity_game_multiplayer">
        </activity>
    </application>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

</manifest>
